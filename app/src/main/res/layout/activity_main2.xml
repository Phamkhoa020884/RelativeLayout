<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout

    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android" >




    <TextView
        android:layout_marginRight="25dp"

        android:id="@+id/text4"
        android:layout_width="wrap_content"

        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:background="#F20"

        android:paddingHorizontal="40dp"

        android:paddingVertical="10dp"
        android:text="4"
        android:textSize="30sp" />

    <TextView
        android:layout_above="@id/text4"
        android:layout_toLeftOf="@id/text4"
        android:paddingVertical="10dp"
        android:paddingHorizontal="40dp"

        android:id="@+id/text3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:background="#8BC34A"

        android:text="3"
        android:textSize="30sp" />
    <TextView
        android:layout_above="@id/text3"
        android:layout_toLeftOf="@id/text3"
        android:paddingVertical="10dp"
        android:paddingHorizontal="40dp"

        android:id="@+id/text2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:background="#4CAF50"

        android:text="2"
        android:textSize="30sp" />
    <TextView
        android:layout_toLeftOf="@id/text2"
        android:layout_above="@id/text2"
        android:paddingVertical="10dp"
        android:paddingHorizontal="40dp"

        android:id="@+id/text1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:background="#9C27B0"

        android:text="1"
        android:textSize="30sp" />
    <TextView
        android:layout_below="@id/text4"
        android:layout_toLeftOf="@id/text4"
        android:paddingVertical="10dp"
        android:paddingHorizontal="40dp"

        android:id="@+id/text5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:background="#7C8077"

        android:text="5"
        android:textSize="30sp" />
    <TextView
        android:layout_below="@id/text5"
        android:layout_toLeftOf="@id/text5"
        android:paddingVertical="10dp"
        android:paddingHorizontal="40dp"

        android:id="@+id/text6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:background="#FFC107"

        android:text="6"
        android:textSize="30sp" />
    <TextView
        android:layout_below="@id/text6"
        android:layout_toLeftOf="@id/text6"
        android:paddingVertical="10dp"
        android:paddingHorizontal="40dp"

        android:id="@+id/text7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:background="#00BCD4"

        android:text="7"
        android:textSize="30sp" />



</RelativeLayout>